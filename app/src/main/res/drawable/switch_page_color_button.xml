<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/Silver"/>
            <stroke
                android:width="1dip"
                android:color="@color/halfOpacityBlack"	/>
            <corners
                android:radius="2dip"/>
            <padding
                android:left="10dip"
                android:right="10dip"
                android:top="10dip"
                android:bottom="10dip"/>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/Silver"
                android:endColor="@color/Gray"
                android:angle="270"/>
