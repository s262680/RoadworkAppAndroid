                android:width="1dip"
                android:color="@color/halfOpacityBlack"/>
            <corners
                android:radius="2dip"/>
            <padding
                android:left="10dip"
                android:right="10dip"
                android:top="10dip"
                android:bottom="10dip"/>

        </shape>
    </item>
